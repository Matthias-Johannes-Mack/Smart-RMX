<?xml version = "1.0"?>

<Ruleset>

    <Rule>
        <ByteConditions>
            <Condition>
                <Bus>1</Bus>
                <SystemAddress>0</SystemAddress>
                <Equal>10</Equal>
                <NotEqual>255</NotEqual>
                <Bigger>7</Bigger>
                <Smaller>15</Smaller>
            </Condition>

            <Condition>
                <Bus>1</Bus>
                <SystemAddress>0</SystemAddress>
                <Equal>10</Equal>
                <NotEqual>255</NotEqual>
                <Bigger>7</Bigger>
                <Smaller>15</Smaller>
            </Condition>
        </ByteConditions>

        <Actions>
            <Wait>12</Wait>
            <BitAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Bit>0</Bit>
                <BitValue>1</BitValue>
            </BitAction>
            <BitAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Bit>0</Bit>
                <BitValue>toggle</BitValue>
            </BitAction>
            <ByteAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <ByteValue>255</ByteValue>
            </ByteAction>
            <ByteAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Decrement>1</Decrement>
            </ByteAction>
            <ByteAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Increment>1</Increment>
            </ByteAction>
        </Actions>

    </Rule>

    <Rule>
        <BitConditions>
            <Condition>
                <Bus>1</Bus> <!-- theoretisch beliebig aber wir beschränken uns auf maximal 4 also 1-4? -->
                <SystemAddress>0</SystemAddress> <!-- 0 - 111 -->
                <Bit>0</Bit> <!-- 0 -7 -->
                <BitValue>1</BitValue>
            </Condition>
            <Condition>
                <Bus>1</Bus> <!-- theoretisch beliebig aber wir beschränken uns auf maximal 4 also 1-4? -->
                <SystemAddress>0</SystemAddress> <!-- 0 - 111 -->
                <Bit>0</Bit> <!-- 0 -7 -->
                <BitValue>1</BitValue>
            </Condition>
        </BitConditions>


        <Actions>
            <Wait>4</Wait>
            <BitAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Bit>0</Bit>
                <BitValue>1</BitValue>
            </BitAction>
            <BitAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Bit>0</Bit>
                <BitValue>toggle</BitValue>
            </BitAction>
            <ByteAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <ByteValue>255</ByteValue>
            </ByteAction>
            <ByteAction>
                <Bus>1</Bus>
                <SystemAddress>1</SystemAddress>
                <Decrement>1</Decrement>
            </ByteAction>
        </Actions>

    </Rule>


</Ruleset>
